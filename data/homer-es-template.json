{
  "template": "homer-*",
  "mappings" : {
    "_default_" : {
      "_all" : {"enabled" : true, "omit_norms" : true},
      "dynamic_templates" :
      [
        {
          "ts_fields" : {
            "match" : "timestamp",
            "mapping" : { "type" : "date" } }
        }, {
        "geo_fields" : {
          "match" : "*_geo",
          "mapping": { "type": "geo_point" } }
        }, {
        "ip_fields" : {
          "match" : "*_ip",
          "mapping" : { "type" : "ip" } }
        }, {
        "byte_fields" : {
          "match" : "*_bytes",
          "mapping" : { "type" : "byte" } }
        },
        {
          "string_fields" : {
            "match" : "*",
            "match_mapping_type" : "string",
            "mapping" : {
              "type" : "string", "index" : "analyzed", "omit_norms" : true,
              "fields" : { "raw" : {"type": "string", "index" : "not_analyzed", "ignore_above" : 256}}
            }
          }
        }
      ]
    }
  }
}
